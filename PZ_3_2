#include <iostream>
#include <cmath>
using namespace std;
	
	double a;
	double b;
	double c;
	double x;
	double x1;
	double x2;
	double D;


int main()
{
	
	cout << "Enter a" << endl;
	cin >> a;

	cout << "Enter b" << endl;
	cin >> b;

	cout << "Enter c" << endl;
	cin >> c;

	D = pow(b, 2)- 4 * a * c;

	if (D < 0) {
		cout << "No Root" << endl;
	} 
	else if (D==0) {
		x = -b / (2 * a);
		cout << " x = " << x << endl;
	}
	else if (D > 0) {
		x1 = (-b + sqrt(D)) / 2 * a;
		x2 = (-b - sqrt(D)) / 2 * a;
		cout << "x1=" << x1 << endl << "x2=" << x2 << endl;

		}
	system ("pause");
	return 0;

}
